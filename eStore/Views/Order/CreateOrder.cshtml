@model BusinessObject.OrderObject

@{
    ViewData["Title"] = "Create Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-5">Create order</h3>
<form asp-controller="Order" asp-action="Create" method="POST">
    <div class="form-group row">
        <div class="col-12 col-lg-4">
            <div class="">
                <label for="inputId">Member Id</label>
                <input asp-for="MemberId" class="form-control" />
            </div>
            <div class="mt-3">
                <label for="inputOrderDate">Order Date</label>
                <input asp-for="OrderDate" class="form-control" type="date" />
            </div>
            <div class="mt-3">
                <label for="inputRequiredDate">Required Date</label>
                <input asp-for="RequiredDate" class="form-control" type="date" />
            </div>
            <div class="mt-3">
                <label for="inputShippedDate">Shipped Date</label>
                <input asp-for="ShippedDate" class="form-control" type="date" />
            </div>
            <div class="mt-3">
                <label for="inputShippedDate">Freight</label>
                <input asp-for="Freight" class="form-control" type="number" min="0" />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-success w-100" value="Create" />
            </div>
            <div class="col">
                <a asp-action="ViewOrder" class="btn btn-danger w-100">Back</a>
            </div>
        </div>
    </div>
</form>
